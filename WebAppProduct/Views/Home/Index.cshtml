@model IEnumerable<WebAppProduct.Models.DB.DataBaseClass.Product>

<h2>Products List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Category.Name</td>
                <td>@product.Price</td>
            </tr>
        }
    </tbody>
</table>
